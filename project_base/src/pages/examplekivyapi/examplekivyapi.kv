
<ExampleKivyapi>:
	BoxLayout:
		orientation: 'vertical'
		FlexLabel:
			id: texting
			text: "Example Label"
			color: [1,1,1,1]
			bg_color: [.5, .5, .5, 1]
		FlexText:
			id: url
			hint_text: "url"
			text: "https://api.github.com/users/VictorManhani"
		FlexButton:
			text: "Click to call the API"
			on_release:
				root.call_api()
		FlexLayout:
			orientation: "horizontal"
			FlexButton:
				text: "<- text"
				on_release:
					app.root.current = "splash"
			FlexButton:
				text: "async ->"
				on_release:
					app.root.current = "label"